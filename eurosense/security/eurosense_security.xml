<odoo>

    <record id="group_account_allowed" model="res.groups">
        <field name="name">Allowed in contact</field>
        <field name="category_id" ref="base.module_category_accounting_accounting"/>
    </record>

    <record id="account_move_allowed_rule" model="ir.rule">
        <field name="name">Allowed user access</field>
        <field ref="account.model_account_move" name="model_id"/>
        <field name="domain_force">[('partner_id','in',user.allowed_contact_ids.ids), ('partner_id', '!=', False)]</field>
        <field name="groups" eval="[(4, ref('group_account_allowed'))]"/>
    </record>

    <record id="account.account_invoice_rule_see_all" model="ir.rule">
        <field name="domain_force">[('move_type', 'in', ('out_invoice', 'out_refund'))]</field>
    </record>

    <record id="account_invoice_rule_see_all_admin" model="ir.rule">
        <field name="name">All Invoices</field>
        <field name="model_id" ref="model_account_move"/>
        <field name="domain_force">[('move_type', 'in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
    </record>


</odoo>
