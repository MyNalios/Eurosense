<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_job_form" model="ir.ui.view">
        <field name="model">hr.job</field>
        <field name="priority">98</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='recruitment']/field[@name='department_id']" position="after">
                <field name="allowed_recruiter_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <menuitem
        name="Recruitment"
        id="hr_recruitment.menu_hr_recruitment_root"
        web_icon="hr_recruitment,static/description/icon.png"
        groups="eurosense_custo.hr_recruitment_group_allowed_jobs"
        sequence="80"/>
</odoo>
